template(name='login')

	.ui-flex-row.ui-flex-height

		.ui-flex-1x

		.ui-flex-column.ui-flex-1x.ui-flex-center--child

			.ui-flex-column.ui-flex-1x

				h2(style='align-self: flex-start; margin-bottom: 30px;') 易安管理系统

				form.ui-fit-width#loginForm

					.ui-flex-row

						label.ui-flex-1x.ui-padded-sm
							span 用户名
							input(type='text' name='username' placeholder='username')

						label.ui-flex-1x.ui-padded-sm
							span 密码
							input(type='password' name='password' placeholder='password')

					.ui-flex-1x.ui-padded-sm
						input(type='submit' value='登陆')

		.ui-flex-1x
