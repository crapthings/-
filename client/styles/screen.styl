$headerHeight = 80px

$primaryColor = rgba(106,90,205, .9)
// $primaryColor = rgba(30,144,255, .9)
$textColor = #666


*
	box-sizing border-box
	outline none

html, body
	width 100%
	height 100%
	background-color #fff

body
	overflow-x hidden
	font-family 'Lucida Grande', 'Lucida Sans Unicode', 'STHeiti', 'Helvetica', 'Arial', 'Verdana', 'sans-serif'
	font-size 14px
	color $textColor

h1, h2, h3, h4, h5, h6
	margin 0
	padding 0
	color $primaryColor

a
	text-decoration none
	color $primaryColor

table
	width 100%
	border-collapse collapse

thead
	position sticky
	top 0

th, td
	padding 8px
	text-align left

th
	background-color ($primaryColor + 50%)
	color white
	border 1px solid @background-color

td
	border 1px solid ($primaryColor + 50%)

tr:nth-child(even)
	background-color #efefef

input[type='text']
input[type='password']
input[type='search']
input[type='submit']
textarea
	width 100%
	padding 8px
	border none

input[type='text']
input[type='password']
	border-bottom 1px solid $primaryColor

input[type='radio']
input[type='checkbox']
	padding 8px

input[type='submit']
	background-color $primaryColor
	color white

textarea
	resize none
	border-left 1px solid $primaryColor

label
	color $primaryColor
	& input
	& textarea
		color $textColor

//

.ui-header
	position fixed
	top 0
	left 0
	z-index 999
	width 100%
	height $headerHeight
	background-color $primaryColor

	& h2
	& h3
		color white

	& a
		padding 0 32px
		color white

	& .logo
		color white

.ui-main
	padding-top ($headerHeight + 8px) !important
	padding-bottom 8px !important

//

.ui-bordered
	border 1px solid $primaryColor

#loginForm
	// width 600px

.ui-label
	color $primaryColor
	& label
		border-bottom 1px solid $primaryColor
		color $textColor
